PORT=3000

# Path to Codex binary. Use 'codex' if it's in your PATH, or specify full path
# Examples:
#   - codex (if installed globally)
#   - ~/.nvm/versions/node/v22.17.1/bin/codex
#   - /usr/local/bin/codex
CODEX_BIN_PATH=codex

# JWT secret for signing tokens. Generate with: openssl rand -base64 32
JWT_SECRET=your-secret-key-here
JWT_ISSUER=codex-remote-runner

# Admin password hash - DO NOT SET MANUALLY
# Run: pnpm tsx scripts/setup-auth.ts
# This script will generate and set ADMIN_PASSWORD_HASH for you
ADMIN_PASSWORD_HASH=

# Rate limiting
RATE_LIMIT_POINTS=60
RATE_LIMIT_DURATION=60
TASK_HEARTBEAT_MS=15000

# Default workspace directory for Codex tasks
# Use ~ for home directory or absolute path
# Example: ~/codex-workspace
DEFAULT_WORKSPACE=~/codex-workspace
